<UserControl x:Class="DTD.Evaluate.CustomUserControls.Slider.EvaluationSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DTD.Evaluate.CustomUserControls.Slider"
             mc:Ignorable="d" 
             MinWidth="250" Background="White">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="HeaderLable"
            VerticalAlignment="Bottom"
            Text="Header" Margin="10,20,20,20" FontWeight="Bold"/>
        
        <Slider x:Name="ValueSlider"
            Minimum="0"
            Maximum="100"
            Style="{DynamicResource MaterialDesignDiscreteSlider}"
            ToolTip="MaterialDesignDiscreteSlider"
            Value="50"
            Width="auto"
            Margin="5,0,5,10"/>

    </StackPanel>
</UserControl>
